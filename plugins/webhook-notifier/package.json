{
  "name": "@claude-code/webhook-notifier",
  "version": "2.0.0",
  "description": "Modern webhook and notification plugin for Claude Code",
  "main": "./dist/index.js",
  "bin": {
    "webhook": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node scripts/build.js",
    "build:watch": "node scripts/build.js --watch",
    "test": "./scripts/test-all.sh",
    "test:watch": "vitest --watch",
    "lint": "biome check src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude-code",
    "webhook",
    "notification",
    "macos",
    "automation"
  ],
  "author": {
    "name": "Zephyr",
    "email": "zephyrTang@aliyun.com"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "node-notifier": "^10.0.1",
    "ora": "^8.0.1",
    "yaml": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20.19.24",
    "@types/node-notifier": "^8.0.5",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
